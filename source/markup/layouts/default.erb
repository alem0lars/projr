<div id="container-wrp">
  <div id="container" class="container-fluid">
    <%= Helpers::Partials.render($config[:partials_pth].join('navigation.erb')) %>

    <header class="header-wrp row-fluid">
      <%= Helpers::Partials.render($config[:partials_pth].join('header.erb')) %>
    </header>

    <div id="main-wrp row-fluid">
      <%= yield %>
    </div>

  </div>
  <div id="push"></div>

</div>

<footer id="footer-wrp row-fluid">
  <%= Helpers::Partials.render($config[:partials_pth].join('footer.erb')) %>
</footer>

</body>

</html>
