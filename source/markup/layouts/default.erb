<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title><%= $config[:title] %></title>

  <meta name="author" content="<%= $config[:author][:name] %>">
  <meta name="description" content="<%= $config[:description] %>">

  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <script data-main="<%= $config[:scripts_name] %>/app.js" src="<%= $config[:scripts_name] %>/lib/require.js"></script>

  <link rel="stylesheet" href="<%= $config[:styles_name] %>/app.css">

  <link rel="shortcut icon" href="<%= $config[:images_name] %>/app/icons/favicon.ico">

  <% if $config[:images_pth].join('app', 'icons', 'apple-touch-icon.png').exist? %>
    <link rel="apple-touch-icon" href="<%= $config[:images_name] %>/app/icons/apple-touch-icon.png">
  <% end %>
  <% if $config[:images_pth].join('app', 'icons', 'apple-touch-icon-72x72.png').exist? %>
    <link rel="apple-touch-icon" href="<%= $config[:images_name] %>/app/icons/apple-touch-icon-72x72.png">
  <% end %>
  <% if $config[:images_pth].join('app', 'icons', 'apple-touch-icon-114x114.png').exist? %>
    <link rel="apple-touch-icon" href="<%= $config[:images_name] %>/app/icons/apple-touch-icon-114x114.png">
  <% end %>

</head>

<body>

